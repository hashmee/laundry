<div class="well">
<div class="float-right">
<%= link_to '+New Bill', new_bill_path, class: 'btn btn-info'%></div>
<table class="table table-striped table-hover" >
	<thead>

	<th>Name</th>
	<th>Mobile</th>
	<th>Price</th>
	<th>Advance</th>
	<th>Status</th>
	<th>Delivery On</th>
	</thead>
	<tbody>
		<tr><%@bills.each do |bill|%></tr>
          <tr>
          	<td><%= bill.name%></td>
          	<td><%= bill.mobile%></td>
          	<td><%= bill.fare %></td>
          	<td><%= bill.advance%></td>
          	<td><%= bill.status%></td>
          	<td><%= bill.delivery_date%></td>
          </tr>
		<%end%>
	</tbody>
</table>
</div>
